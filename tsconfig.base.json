{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "declaration": true,
    "sourceMap": true,
    "sourceRoot": "../../",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "dist",
    "paths": {
      "@config": ["../config"],
      "@lib/*": ["../lib/*"],
      "@files/*": ["../files/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "rootDirs": ["src", "lib", "config"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "strictNullChecks": true
  },
  "include": ["src", "lib", "config", "files", "index.ts"],
  "exclude": ["node_modules"]
}
